<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayContact"
    android:background="@color/bColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header1"
            android:paddingLeft="50dp"
            android:textSize="35dp"
            android:textColor="@color/textColor"/>
        <View
            android:id="@+id/hr2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_below="@+id/headers"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/name"
            android:maxLength="20"
            android:layout_below="@+id/hr2"
            android:textColor="@color/tColor"
            android:digits="@string/alphabet">
            <requestFocus/>
        </EditText>
        <ImageView
            android:id="@+id/backBtn"
            android:layout_alignParentBottom="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_back"
            android:layout_below="@+id/errorMsg"
            android:onClick="back"
            android:background="@drawable/buttonshape"
            android:textColor="@color/tColor"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/button1"
            android:layout_alignParentBottom="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_save"
            android:layout_below="@+id/errorMsg"
            android:onClick="run"
            android:background="@drawable/buttonshape"
            android:textColor="@color/tColor"
            android:layout_alignParentRight="true"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextName"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="phone|text"
            android:hint="@string/phone"
            android:maxLength="8"
            android:textColor="@color/tColor"
            />

        <EditText
            android:id="@+id/editTextDay"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhone"
            android:hint="DD"
            android:maxLength="2"
            android:inputType="phone|text"
            android:textColor="@color/tColor"
            />
        <EditText
            android:id="@+id/editTextMonth"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhone"
            android:layout_marginLeft="95dp"
            android:hint="MM"
            android:maxLength="2"
            android:inputType="phone|text"
            android:textColor="@color/tColor"
            />
        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhone"
            android:layout_marginLeft="190dp"
            android:hint="YYYY"
            android:maxLength="4"
            android:inputType="phone|text"
            android:textColor="@color/tColor"
            />
        <TextView
            android:id="@+id/errorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fyll inn alle felter"
            android:layout_below="@+id/editTextMonth"
            android:textColor="@color/red"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:paddingTop="10dp"/>
    </RelativeLayout>
</ScrollView>